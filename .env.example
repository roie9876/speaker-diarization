# Azure Speech Service Configuration
# Get your key from: https://portal.azure.com

# For Cloud Deployment (Testing)
AZURE_SPEECH_KEY=your_azure_speech_service_key_here
AZURE_REGION=eastus

# For Container Deployment (Production)
# Set AZURE_MODE=container and AZURE_ENDPOINT when using on-premises container
AZURE_MODE=cloud
# AZURE_ENDPOINT=http://localhost:5000

# Hugging Face Configuration
# Required for pyannote.audio models
# Get token from: https://huggingface.co/settings/tokens
# Accept user agreements at:
# - https://huggingface.co/pyannote/speaker-diarization-3.1
# - https://huggingface.co/pyannote/segmentation-3.0
HUGGING_FACE_HUB_TOKEN=your_huggingface_token_here

# Processing Configuration
SIMILARITY_THRESHOLD=0.75
USE_GPU=true

# Audio Processing
SAMPLE_RATE=16000
AUDIO_CHUNK_DURATION=3.0
AUDIO_OVERLAP_DURATION=1.0

# Storage Paths
PROFILES_DIR=data/profiles
RESULTS_DIR=data/results
TEMP_DIR=data/temp

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Streamlit Configuration (Optional)
# STREAMLIT_SERVER_PORT=8501
# STREAMLIT_SERVER_ADDRESS=localhost
